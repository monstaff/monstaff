<%= javascript_include_tag "topology.js"%>
<script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript"></script>
<div class="panel-group" style="width: 90%; padding-left: 10%;">
  <div class="panel panel-primary" >
    <div class="panel-heading">
<% @ring.each do |pool| %>
          <button id="<%= pool[0].gsub(".", "") %>" class="rings btn btn-default"><%= pool[0].gsub(".", "")%></button>

<% end %>


    </div>
    <br>
    <div class="panel-body">
      <div id='ring_list'>
        <%@ring.each do |pool|%>
            <div id="r<%= pool[0].gsub(".", "") %>"style ="display: none;" class='tr'>
              <% pool[1].sort_by { |a| a.split('.')[-1].to_i}.each do |ring| %>
                  <!--<button type="button" class="rings btn btn-default "><%#= link_to ring.split('.')[-1], topology_index_path(:ring => pool), remote: true%></button>-->
                  <%= button_to ring.split('.')[-1], show_topology_path(:ring => ring) , :class=>"rings btn btn-default", remote: true%>
              <% end %>
            </div>
        <% end %>
      </div>
    </div>
  </div>

</div>

<!-- Trigger/Open The Modal -->

<!-- The Modal -->
<div id="myModalload" class="modalload">
  <!--<img class="modalload-content" id="img01" src="http://www.mytreedb.com/uploads/mytreedb/loader/ajax_loader_blue_512.gif"> -->
  <img width='90%;' height='80%;' class="modalload-content" id="img01" src="https://67.media.tumblr.com/tumblr_m8m87cu94j1rvwq31o1_500.gif">
  <div id="caption"></div>
</div>


<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">X</span>
    <p><div id="holder" style="height: 700px;"></div></p>
  </div>


</div>

