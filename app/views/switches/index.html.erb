
<div class="container">
  <div class="span5 fill">

    <div class="col-md-4">
      <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#myModal">Добавить украденый коммутатор</button>
    </div>




<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Данные о коммутаторе</h4>
      </div>
      <div class="modal-body">

        <%= render 'newform' %>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>




<%= form_tag switches_path, :method => 'get', :html => {:class=>"form-inline"}, remote: true do %>
        <fieldset>
          <legend>Отчет по коммутаторам</legend>
          <div class="col-xs-2">

            <%= text_field_tag :from_date, "", class: 'xlssclass form-control', :placeholder=>"от" %>
          </div>
          <div class="col-xs-2">

             <%= text_field_tag :to_date, "", class: 'xlssclass form-control', :placeholder=>"до" %>
        </div>


    <%= submit_tag "Выбрать", :name => nil, :class=>"btn btn-info" %>





        </fieldset>
<% end %>
<br>
    <div id="table_result">

<%= render "result" %>
    </div>
    </div>
  </div>


