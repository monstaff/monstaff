          <div class="col-xs-2">

             <%= text_field_tag :to_date, "", class: 'xlssclass form-control', :placeholder=>"до" %>
        </div>


    <%= submit_tag "Выбрать", :name => nil, :class=>"btn btn-info" %>





        </fieldset>
<% end %>
