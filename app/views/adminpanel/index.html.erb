<%= javascript_include_tag "adminpanel.js"%>
<div class="container">

  <div class="span5 fill">
    <button id="regions">Регионы</button>
    <button id="groups">Группы</button>

    <div id="region" style="display: none; padding-top: 5%;">
      <table class="table" style="width: 40%;">
        <thead>
        <tr>
          <th>Имя ЦОА/Региона/Отдела</th>
          <th> </th>
        </tr>
        </thead>
          <tbody id="region_table">
          <%=  render 'show_region' %>
        </tbody>
      </table>



      <div id="new_task" style="padding-top: 2%;">
        <%= form_for :region, url: region_index_path, :html => {:class=>"form-inline"}, remote: true do |u| %>

            <div class="form-group">
              <%= u.label :name, 'название отдела/региона' %>
              <%= u.text_field :name, :class=>"form-control input-sm" %>
            </div>

            <%= u.submit "Добавить", :class=>"btn btn-default"%>
        <% end %>
      </div>
    </div>



    <div id="group" style="display: none; padding-top: 5%;">

      <table class="table" style="width: 40%;">
        <thead>
        <tr>
          <th>Имя группы</th>
          <th> Тип группы</th>
          <th> </th>
          <th> <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#myModal">права групп</button></th>
        </tr>

        </thead>
        <tbody id="group_table">
        <%= render 'show_group'%>
        </tbody>
      </table>

      <%= form_for :group, url: group_index_path, :html => {:class=>"form-inline"}, remote: true do |g| %>
          <div class="form-group">
            <%= g.label :name, 'Имя Группы' %>
            <%= g.text_field :name, :class=>"form-control input-sm" %>
          </div>
          <div class="form-group">
          <%= g.label :group_type, 'супер группа' %>
          <%= g.check_box :group_type %>
            <%= g.label :remove, 'удаление' %>
            <%= g.check_box :remove %>
            <%= g.label :create, 'создание ' %>
            <%= g.check_box :create %>
          </div>
          <%= g.submit "Добавить", :class=>"btn btn-default"%>
      <% end %>

          </div>

    <div class="modal fade" id="myModal" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Редактировать права Группы</h4> <span class="glyphicon glyphicon-alert"></span> Для каждой группы можно установить разрешение на просмотр региона/ЦОА
          </div>
          <div class="modal-body">
            <%= render 'group_permission' %>


          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>

      </div>
    </div>


  </div>
</div>




