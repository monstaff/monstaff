


<%= javascript_include_tag "graphic.js"%>
<div class="container">
  <div class="span5 fill">

    <% if current_user %>
        <%= form_for :graphic, url: graphic_index_path, :html => {:class=>"form-horizontal"} do |f| %>
            <fieldset>
              <legend>Добавление дежурства</legend>

              <div class="form-group">
                <%= f.label :engname, 'Выберите инженера',  :class=> "col-md-4 control-label"%>
                <div class="col-md-4">
                  <%= f.select :engname, (User.all.collect{|u| [u.fullname, u.id]}),{ :prompt => "Выберите инженера"}, :class=>"form-control"%>
                </div>
              </div>





              <div class="form-group">
                <%= f.label :worktime, 'Рабочие часы *',  :class=> "col-md-4 control-label" %>
                <div class="col-md-4">
                  <%= f.text_field :worktime , :class=>"form-control input-md" %>

                </div>
              </div>
              <div class="form-group">
                <%= f.label :comment, 'Комментарий',  :class=> "col-md-4 control-label" %>
                <div class="col-md-4">
                  <%= f.text_field :comment, :class=>"form-control input-md" %>

                </div>
              </div>
              <div class="form-group">
                <%= f.label :date, 'Дата *',  :class=> "col-md-4 control-label" %>
                <div class="col-md-4">
                  <%= f.text_field :date, :class => 'datepickers form-control input-md',:readonly => true  %>
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-4 control-label" for="newgraph"></label>
                <div class="col-md-4">
                  <%= f.submit "Добавить", :id=>"newgraph", :class=>"btn btn-info"%>
                </div>
              </div>

        <% end %>

    <% else %>

        Пожалуйста авторизируйтесь

        </fieldset>
    <%end %>


  </div>
</div>