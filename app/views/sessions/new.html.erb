

<%= debug(current_user) %>
<div class="container">
  <div class="span5 fill">



    <% if current_user %>



        <% if current_user.passactive == nil%>

            <br>Введите новый пароль<br>
            <%= form_for current_user, method: :patch do
            |f| %>


                <% if @user.errors.any? %>
                    <div id="error_explanation">

                      <ul>
                        <% @user.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                      </ul>
                    </div>
                <% end %>



                <%= f.label :password, 'Пароль' %>
                <%= f.password_field :password %>

                <%= f.label :password_confirmation, 'Повторите пароль' %>
                <%= f.password_field :password_confirmation %>

                <%= f.hidden_field :pass_valid, :value => nil %>


                <%= f.submit "Добавить"%>
                </div>

            <% end %>

        <% else %>

        <% end %>

    <% else %>

        <div class="row">
          <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="panel panel-default">
              <div class="panel-heading">
                <strong style="text-align: center;"> Войдите что бы продолжить</strong>
              </div>
              <div class="panel-body">
                <%= form_for :user, url: sessions_login_path  do |f| %>

                    <fieldset>
                      <div class="row">
                        <div class="center-block">
                          <img class="profile-img"
                               src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="" style="padding-left: 30%;">
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                          <div class="form-group">
                            <div class="input-group">
                        <span class="input-group-addon">
                          <i class="glyphicon glyphicon-user"></i>
                        </span>
                              <%= f.text_field :email, :placeholder  => "введите почту", :value => nil, :class=> "form-control"%><br>
                            </div>
                          </div>
                          <div class="form-group">
                            <div class="input-group">
                        <span class="input-group-addon">
                          <i class="glyphicon glyphicon-lock"></i>
                        </span>
                              <%#= f.hidden_field :pass_valid, :value => "1" %>
                              <%= f.password_field :password, :placeholder => "введите пароль", :class=> "form-control" %>
                            </div>
                          </div>
                          <div class="form-group">
                            <%= f.submit :Войти , :class=> "btn btn-lg btn-primary btn-block"%><br>
                          </div>
                        </div>
                      </div>
                    </fieldset>
                    </form>
                    </div>
                    <div class="panel-footer ">
                      Для регистрации обратитесь в отдел мониторинга.
                    </div>
                    </div>
                    </div>
                    </div>
                <% end %>


    <% end %>




    </div>
</div>



