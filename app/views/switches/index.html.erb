
<div class="container">
  <div class="span5 fill">

    <div class="col-md-4">
      <div>
      <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#myModal">Добавить украденный коммутатор</button>
      </div>
      <br>
      <div>
      <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#myModal2">Список украденных коммутаторов</button>
      </div>
    </div>







<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Данные о коммутаторе</h4>
      </div>
      <div class="modal-body">

        <%= render 'newform' %>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>




    <div id="myModal2" class="modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Список украденных коммутаторов.</h4>
            <br>

            <%= form_tag  stolen_list_path, :method => 'get', remote: true, :class =>'search-form' do %>
                <div class="form-group has-feedback">
                  <label for="search" class="sr-only">Search</label>
                  <%= text_field_tag :search, params[:search], placeholder: 'Введите ip, мак-адрес или дату кражи.', :class => 'form-control'%>
                  <span class="glyphicon glyphicon-search form-control-feedback"></span>
                  <%#= submit_tag "Search", :name => nil %>
                </div>
            <% end %>

            <br>
          </div>
          <div class="modal-body">
            <div id="result">
              <%= render 'stolen_list'%>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

          </div>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->



